{
  "name": "giants-preview-app",
  "version": "1.0.0",
  "description": "SF Giants Baseball Game Preview App",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm start",
    "dev:mcp": "cd mcp-server && npm run dev",
    "build": "npm run build:server && npm run build:client && npm run build:mcp",
    "build:server": "cd server && npm run build",
    "build:client": "cd client && npm run build",
    "build:mcp": "cd mcp-server && npm run build",
    "test": "npm run test:mcp",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "test:mcp": "cd mcp-server && npm test",
    "lint": "npm run lint:server && npm run lint:client && npm run lint:mcp",
    "lint:server": "cd server && npm run lint",
    "lint:client": "cd client && npm run lint",
    "lint:mcp": "cd mcp-server && npm run lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "install:all": "npm install && npm run install:server && npm run install:client && npm run install:mcp",
    "install:server": "cd server && npm install",
    "install:client": "cd client && npm install",
    "install:mcp": "cd mcp-server && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "prettier": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0"
  },
  "keywords": [
    "baseball",
    "mlb",
    "giants",
    "node",
    "react",
    "typescript"
  ],
  "author": "SF Giants Preview App",
  "license": "MIT"
}
